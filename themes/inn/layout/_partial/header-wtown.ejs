<!-- 头部组件 - 古北水镇风格 -->
<header class="inn-header">
    <div class="container">
        <div class="header-inner">
            <!-- 网站标题和Logo -->
            <div class="site-info">
                <% if (theme.nav && theme.nav.logo) { %>
                <div class="site-logo">
                    <a href="<%= url_for('/') %>">
                        <img src="<%= url_for(theme.nav.logo) %>" alt="<%= config.title %>">
                    </a>
                </div>
                <% } %>
                
                <div class="site-text">
                    <h1 class="site-title">
                        <a href="<%= url_for('/') %>"><%= config.title %></a>
                    </h1>
                    <p class="site-subtitle"><%= config.subtitle %></p>
                </div>
            </div>
            
            <!-- 导航菜单 -->
            <nav class="site-nav">
                <div class="menu-toggle" id="menu-toggle">
                    <i class="fas fa-bars"></i>
                </div>
                
                <ul class="menu-list" id="menu-list">
                    <li class="menu-item">
                        <a href="<%= url_for('/') %>" class="menu-link">首页</a>
                    </li>
                    <li class="menu-item">
                        <a href="<%= url_for('/客房介绍/') %>" class="menu-link">客房介绍</a>
                    </li>
                    <li class="menu-item">
                        <a href="<%= url_for('/庭院介绍/') %>" class="menu-link">庭院介绍</a>
                    </li>
                    <li class="menu-item">
                        <a href="<%= url_for('/温馨公告/') %>" class="menu-link">温馨公告</a>
                    </li>
                    <li class="menu-item">
                        <a href="<%= url_for('/留言预定/') %>" class="menu-link">留言预定</a>
                    </li>
                    <li class="menu-item">
                        <a href="<%= url_for('/关于/') %>" class="menu-link">关于我们</a>
                    </li>
                </ul>
                
                <!-- 搜索按钮 -->
                <div class="search-container">
                    <button id="search-btn" class="search-btn" title="搜索">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
                
                <!-- 夜间模式切换 -->
                <div class="darkmode-toggle" id="darkmode-toggle" title="切换夜间模式">
                    <i class="fas fa-moon"></i>
                </div>
            </nav>
        </div>
    </div>
</header>

<!-- 搜索弹窗 -->
<div id="search-mask" class="search-mask"></div>
<div id="search-box" class="search-box">
    <div class="search-input-container">
        <input type="text" id="search-input" class="search-input" placeholder="搜索文章..." autocomplete="off">
        <button id="search-close" class="search-close">
            <i class="fas fa-times"></i>
        </button>
    </div>
    <div id="search-result" class="search-result"></div>
</div>