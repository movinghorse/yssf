<!-- 页脚组件 -->
<footer class="inn-footer">
    <div class="container">
        <div class="footer-info">
            <div class="footer-copyright">
                <span>&copy; <%= new Date().getFullYear() %> <%= config.author %></span>
            </div>
            
            <div class="footer-framework">
                <span>由 <a href="https://hexo.io" target="_blank">Hexo</a> 强力驱动</span>
                <span class="footer-separator">|</span>
                <span>主题 <a href="#">Inn</a></span>
            </div>
            
            <% if (theme.footer && theme.footer.custom_text) { %>
            <div class="footer-custom">
                <%- theme.footer.custom_text %>
            </div>
            <% } %>
        </div>
        
        <div class="footer-links">
            <% if (theme.social) { %>
            <div class="social-links">
                <% for (const [icon, link] of Object.entries(theme.social)) { %>
                <a href="<%= link.url %>" title="<%= link.name %>" target="_blank" style="color: <%= link.color || '#666' %>">
                    <i class="<%= icon %>"></i>
                </a>
                <% } %>
            </div>
            <% } %>
        </div>
        
        <div class="back-to-top" id="back-to-top">
            <i class="fas fa-arrow-up"></i>
        </div>
    </div>
</footer>